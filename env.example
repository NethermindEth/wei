# Wei Project Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# AGENT SERVICE CONFIGURATION
# =============================================================================

# Application port (default: 3001)
WEI_AGENT_PORT=3001

# Database connection string
WEI_AGENT_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/wei_agent

# AI Model Configuration
WEI_AGENT_AI_MODEL_PROVIDER=openai
WEI_AGENT_AI_MODEL_NAME=gpt-4o-mini

# OpenRouter API Key (required for AI model access)
WEI_AGENT_OPEN_ROUTER_API_KEY=your_openrouter_api_key_here

# Exa API Key (optional, for related proposals search)
WEI_AGENT_EXA_API_KEY=your_exa_api_key_here

# JWT Secret for user authentication (required for auth endpoints)
WEI_AGENT_JWT_SECRET=your_jwt_secret_here

# API Authentication
# Comma-separated list of valid API keys for protected endpoints
WEI_AGENT_API_KEYS=key1,key2,key3
# Enable/disable API key authentication (default: true)
WEI_AGENT_API_KEY_AUTH_ENABLED=true

# CORS Configuration
# Comma-separated list of allowed origins for CORS
# Use * for wildcard domains (e.g. *.vercel.app)
CORS_ALLOWED_URLS=http://localhost:3000,*nethermind.io,*nethermind-org.vercel.app

# =============================================================================
# INDEXER SERVICE CONFIGURATION
# =============================================================================

# Server Configuration
WEI_INDEXER_HOST=0.0.0.0
WEI_INDEXER_PORT=3002

# Database Configuration
WEI_INDEXER_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/wei_indexer
WEI_INDEXER_MAX_CONNECTIONS=10

# Snapshot API Configuration
# Note: Snapshot API works without an API key with 100 requests/minute rate limiting
WEI_INDEXER_SNAPSHOT_BASE_URL=https://hub.snapshot.org/api
WEI_INDEXER_SNAPSHOT_API_KEY=your_snapshot_api_key_here

# Tally API Configuration
WEI_INDEXER_TALLY_BASE_URL=https://api.tally.xyz
WEI_INDEXER_TALLY_API_KEY=your_tally_api_key_here

# Webhook Configuration
WEI_INDEXER_WEBHOOK_SECRET=your_webhook_secret_here
WEI_INDEXER_MAX_RETRIES=3

# =============================================================================
# COMMON CONFIGURATION
# =============================================================================

# Logging level (debug, info, warn, error)
RUST_LOG=info

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable development mode
RUST_ENV=development

# Enable backtrace for debugging
RUST_BACKTRACE=1
